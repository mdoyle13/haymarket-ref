<%= render :partial => '/shared/head', :locals => {:theme => true} %>
<body>
    <%= render :partial => '/shared/site_bar' %>
	<div id='header_image'>
		<div class='wrapper'>
		<div class='header'>
				<%= link_to image_tag('/theme/images/haymarket_logo_noAddress.png', :id => 'header_logo'), root_path  %>					
					<!-- <div id='header_right'> -->
										<div id='header-location'>
											<h6>Location & Hours of Operation</h6>
											<!-- <a href='http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=737+West+Randolph+Street,+Chicago,+IL&amp;sll=41.910078,-87.986725&amp;sspn=0.010587,0.019011&amp;ie=UTF8&amp;hq=&amp;hnear=737+W+Randolph+St,+Chicago,+Cook,+Illinois+60661&amp;z=16' target='_blank'>
																				<img class='left' src='/theme/images/minimap.jpg' /> -->
											</a>
											<p><a href='http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=737+West+Randolph+Street,+Chicago,+IL&amp;sll=41.910078,-87.986725&amp;sspn=0.010587,0.019011&amp;ie=UTF8&amp;hq=&amp;hnear=737+W+Randolph+St,+Chicago,+Cook,+Illinois+60661&amp;z=16' target='_blank'>	737 W. Randolph</a><br />
												(corner of Halsted & Randolph)<br />
												Chicago, IL 60661<br /><br />
												Hours<br />
												Sun-Fri 11am-2am<br />
												Sat 11am-3am<br />
												<strong>312.638.0700</strong>
											</p>
										</div>
						
							<%= render :partial => '/shared/menu' %>
					<!-- </div> -->	<!-- end header right -->
				</div>
				<div class='container home'>
					<div id='home_content'>
						<div id='left_column'>
							<% if request.path == "/" %>
							<div class="home-slides-wrapper">
									<div class="flexslider">
										<% @slides = Homeslide.published %>
										<%= render :partial => 'homeslides/slides' unless @slides.blank? %>
									</div>	<!-- end flex -->							
							</div>
							<% end %>
							<% if request.path == "/" %>
	 					 						<div class='featured_post'>
	 					 							<h2>Haymarket Blog</h2>
	 					 							<%= render :partial => 'blogs/blog_post', :collection => Blog.published.latest_post %>
	 					 						</div>
	 					 						<div class='theater'>
	 					 								<%= @page[:drinking_and_writing] %>
	 					 						</div>
	 					 						<% else %>
	 					 						<div class="content">
	 					 							<% unless yield(:body_content_left).blank? %>
	 					 								<%= yield(:body_content_left) %>
	 					 							<% else %>
	 					 								<%= yield %>
	 					 							<% end %>
	 					 						</div>
	 					 						<% end %>
							<!-- <div class='theater'>
																<%= @page[:drinking_and_writing] %>
														</div>  --><!-- end theatre -->
						</div>
						
						<div id='right_column'>
							<div class='side_content'>
						<% if @show_sidebar %>
							<%= render :partial => "shared/sidebar1" %>
						<% end %>
						
													
							</div>
						</div>
						<div class='clear'></div>
					</div>
					<div class='bottom'>
					<div class='social'>
						<a href='http://www.facebook.com/HaymarketBrewing' class='facebook'>Friend us on Facebook</a>
						<a href='http://twitter.com/#!/HaymarketPub' class='twitter'>Follow us on Twitter</a>
						<!-- <a href='http://www.youtube.com/' class='youtube'>Watch us on YouTube</a> -->
					</div>
					<div class='location'>
														<h6>Location & Hours of Operation</h6>
														<p class='left'>
															737 W. Randolph<br />
															<span class='smaller'>(corner of Halsted & Randolph)</span><br />
															Chicago, IL 60661<br /><br /><br/>
															Hours<br />
															Sun-Fri 11am-2am<br />
															Sat 11am-3am
														</p>
													</div>
						<div class='contact'>
							<h6>Signup for E-Newsletter</h6>
							<form method="post" action="https://app.icontact.com/icp/signup.php" name="icpsignup" id="icpsignup4167" accept-charset="UTF-8" onsubmit="return verifyRequired4167();" >
							<input type="hidden" name="redirect" value="http://www.icontact.com/www/signup/thanks.html">
							<input type="hidden" name="errorredirect" value="http://www.icontact.com/www/signup/error.html">

							<div id="SignUp" style="margin-bottom:15px;">
							<table width="220" class="signupframe" border="0" cellspacing="0" cellpadding="0">
							        <tr>
							      <td align="left">
							        <input type="text" placeholder="E-mail address" name="fields_email">
							      </td>
										<td><input type="submit" name="Submit" value="Submit"></td>
							    </tr>
							    <input type="hidden" name="listid" value="48606">
							    <input type="hidden" name="specialid:48606" value="YKND">

							    <input type="hidden" name="clientid" value="1036345">
							    <input type="hidden" name="formid" value="4167">
							    <input type="hidden" name="reallistid" value="1">
							    <input type="hidden" name="doubleopt" value="0">
							    </table>
							</div>
							</form>
							<script type="text/javascript">

							var icpForm4167 = document.getElementById('icpsignup4167');

							if (document.location.protocol === "https:")

							        icpForm4167.action = "https://app.icontact.com/icp/signup.php";
							function verifyRequired4167() {
							  if (icpForm4167["fields_email"].value == "") {
							    icpForm4167["fields_email"].focus();
							    alert("The Email field is required.");
							    return false;
							  }


							return true;
							}
							</script>
						</div>
						<div id='contact_links'>
							<%= link_to 'Contact Us', new_inquiry_path() %> | <a href='/applications/new'>Get Hired</a>
						</div>
						<div class='clear'></div>
					</div>
					<p class="small center">Haymarket is a registered service mark of Haymarket Brewing Company, LLC.</p>
				</div>
			</div>
		</div>
	</body>
</html>
