<% form_for [:admin, @award] do |f| -%>
  <%= f.error_messages %>
  <div class='field'>
    <%= f.label :published -%>
    <%= f.check_box :published -%>
  </div>
  
  <div class='field'>
    <%= f.label :event_name -%>
    <%= f.text_field :event_name, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :category -%>
    <%= f.text_field :category -%>
  </div>
  
  <div class='field'>
    <%= f.label :beer_name -%>
    <%= f.collection_select :beer_name, Beer.all, :name, :name, :prompt => true -%>
  </div>
  
  <div class='field'>
	<br />
		<b>What award did this beer win?</b><br />
    <%= f.text_field :description -%>
  </div>
  
  <div class='field'>
    <%= f.label :year -%>
    <%= f.datetime_select :year -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.awards.award.delete')
              } %>
<% end -%>
