<% form_for [:admin, @beer] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger' -%>
  </div>

  <!-- <div class='field'>
    <%= f.label :beer_category_id -%>
    <%= f.collection_select :beer_category_id, BeerCategory.all, :id, :name, :prompt => true -%>
  </div> -->

  <div class='field'>
    <%= f.label :featured -%>
    <%= f.check_box :featured -%>
  </div>
  
	<div class='field'>
		<%= f.label :on_draft %>
		<%= f.check_box :on_draft %>
	</div>
	
	<div class="field">
		<%= f.label :on_bottle %>
		<%= f.check_box :on_bottle %>
	</div>
	
  <!-- <div class='field'>
    <%# f.label :published %>
    <%# f.check_box :published %>
  </div> -->

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
	<div class='field'>
		<%= f.label :show_date_tapped %>
		<%= f.check_box :show_date_tapped %>
	</div>
	
  <div class='field'>
    <%= f.label :date_tapped -%>
    <%= f.date_select :date_tapped -%>
  </div>
  
  <div class='field'>
    <%= f.label :brewery -%>
    <%= f.text_field :brewery -%>
  </div>

	<div class='field'>
		<%= f.label :og, 'Original Gravity' %>
		<%= f.text_field :og %>
	</div>
	
	<div class='field'>
		<%= f.label :fg, 'Final Gravity' %>
		<%= f.text_field :fg %>
	</div>
	
	<div class='field'>
		<%= f.label :ibu, 'IBU' %>
		<%= f.text_field :ibu %>
	</div>
	
	<div class='field'>
		<%= f.label :abv, 'ABV' %>
		<%= f.text_field :abv %>
	</div>

	<div class="field">
		<%= f.label :draft_price_4oz, "4oz Draft Price" %>
		<%= f.text_field :draft_price_4oz %>
	</div>
	
	<div class="field">
		<%= f.label :draft_price_12oz, "12oz Draft Price" %>
		<%= f.text_field :draft_price_12oz %>
	</div>
	
	<div class="field">
		<%= f.label :draft_price_16oz, '16oz Draft Price' %>
		<%= f.text_field :draft_price_16oz %>
	</div>
	
	<div class="field">
		<%= f.label :draft_price_20oz, "20oz Draft Price" %>
		<%= f.text_field :draft_price_20oz %>
	</div>
	
	<div class="field">
		<%= f.label :bottle_price %>
		<%= f.text_field :bottle_price %>
	</div>
	
	<div class="field">
		<%= f.label :bottle_oz, "Bottle Size (oz)" %>
		<%= f.text_field :bottle_oz %>
	</div>  

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.beers.beer.delete')
              } %>
<% end -%>
