<% content_for :body_content_left do %>

	<% @beer_categories.each do |category| %>
	<div class="tab">
		<h1><%= category.name %></h1>
	    <% category.beers.find_all_by_published(true).each do |beer| %>
			<div class="beer">
	     	<h3><%= beer.name %></h3>
				<%= beer.description %>
					<h4>Awards</h4>
					<ul>
					<% beer.awards.each do |award| %>
					<%= link_to "#{award.description}", award_path(award) %>
					<li><%= award.description %></li>
					<% end %>
					</ul>
					<br />
				<p>
					<%= "Original Gravity: #{beer.og}<br />" unless beer.og.nil? %>
					<%= "Final Gravity: #{beer.fg}<br />" unless beer.fg.nil? %>
					<%= "IBU: #{beer.ibu}<br />" unless beer.ibu.nil? %>
					<%= "ABV: #{beer.abv}" unless beer.abv.nil? %>
				</p>
			</div>
	    <% end %>
	  
	</div>
	<% end %>
<% end %>

<% content_for :body_content_right do %>
	<%= render :partial => "shared/sidebar1" %>
<% end %>	