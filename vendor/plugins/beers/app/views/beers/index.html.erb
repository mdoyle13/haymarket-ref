<% content_for :head do %>
  <%= stylesheet_link_tag "/theme/stylesheets/beer_menu" %>
	<%= stylesheet_link_tag "/theme/stylesheets/print_menu", :media => "print" %>
	<%= stylesheet_link_tag "/theme/stylesheets/beer_print_menu", :media => "print" %>
<% end %>

<% content_for :body_content_left do %>
<a class="print_beer_menu" href="#">Print Menu</a>
<div id="tabs" class="beer_menu">
	
	<ul>
		
		<% 
		i = 1
		@beer_categories.each do |category| 
		%>
			<% unless category.beers.empty? %>
			<li><a href='#tabs-<%= i %>'><%= category.name %></a></li>
			<% i += 1 %>
			<% end  %>
		<% end %>
	</ul>
	<% i = 1 %>
	<% @beer_categories.each do |category| %>
		<% unless category.beers.empty? %>
			<div id="tabs-<%= i %>">
				<% i += 1 %>
				<h1 class="beer-category-name"><%= category.name %></h1>
		    <% category.beers.live.each do |beer| %>
					<div class="beer">
			     	<h3 class="beer_name"><%= beer.name %></h3>
						<% if category.name == 'Draft' %><p class="date-tapped">Date Tapped: <%= beer.date_tapped.strftime('%m/%d/%Y') %></p<% end %>
						<% if beer.og or beer.fg or beer.ibu or beer.abv %>
							<div class="beer-nerd-stuff">
							<%= "Original Gravity: #{beer.og}" unless beer.og.nil? %>
							<%= "Final Gravity: #{beer.fg}" unless beer.fg.nil? %>
							<%= "IBU: #{beer.ibu}" unless beer.ibu.nil? %>
							<%= "ABV: #{beer.abv}" unless beer.abv.nil? %>
							</div>
						<% end %>
						<p class="brewery"><%= beer.brewery %></p>
						<div class="beer-description"><%= beer.description %></div>
						
						<% if !beer.awards.empty? %>
							<div class="awards">
								<h4>Awards</h4>
							<ul>
								<% beer.awards.each do |award| %>
								<%= link_to "#{award.description}", award_path(award) %>
								<li><%= award.description %></li>
								<% end %>
							</ul>
							</div>
						<% end %>
					</div>
		    <% end %>
				<br /><br />
			</div>
		<% end %>
	<% end %>
</div>

<div id="printer-friendly-beer-list">
	<div id="printer-friendly-beer-list-container">
	<% i = 1 %>
	<% @beer_categories.each do |category| %>
		<% unless category.beers.empty? %>
			<% i += 1 %>
			<h1 class="beer-category-name"><%= category.name %></h1><br />
	    <% category.beers.live.each do |beer| %>
				<p class="beer">
		     	<%= beer.name %><%= ", #{beer.brewery}" unless beer.brewery.empty? %><br />
				</p>
	    <% end %>
			<br /><br />
		<% end %>
	<% end %>
	</div>
</div>
<% end %>

<% content_for :body_content_right do %>
	<%= render :partial => "shared/sidebar1" %>
<% end %>	