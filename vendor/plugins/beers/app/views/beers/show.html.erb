<% content_for :body_content_title do %>
  <%= @beer.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Name</h3>
    <%= @beer.name %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @beer.description %>
  </div>
  
  <div>
    <h3>Awards</h3>
    <%= @beer.awards %>
  </div>
  
  <div>
    <h3>Date Tapped</h3>
    <%= @beer.date_tapped %>
  </div>
  
  <div>
    <h3>Brewery</h3>
    <%= @beer.brewery %>
  </div>
  
  <div>
    <h3>Price</h3>
    <%= @beer.price %>
  </div>
  
  <div>
    <h3>Featured</h3>
    <%= @beer.featured %>
  </div>
  
  <div>
    <h3>Published</h3>
    <%= @beer.published %>
  </div>
  
  <div>
    <h3>Beer Category</h3>
    <%= @beer.beer_category_id %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="beers">
    <% @beers.each do |beer| %>
      <li>
        <%= link_to beer.name, beer_url(beer) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
