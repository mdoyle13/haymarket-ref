<% form_for [:admin, @event_inquiry] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :date -%>
    <%= f.text_field :date, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :time -%>
    <%= f.text_field :time -%>
  </div>
  
  <div class='field'>
    <%= f.label :num_people -%>
    <%= f.text_field :num_people -%>
  </div>
  
  <div class='field'>
    <%= f.label :occasion -%>
    <%= f.text_field :occasion -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :notes -%>
    <%= f.text_area :notes, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :extra_requirements -%>
    <%= f.text_area :extra_requirements, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.event_inquiries.event_inquiry.delete')
              } %>
<% end -%>
