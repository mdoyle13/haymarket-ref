<% content_for :body_content_left do %>
  <div class='inquiries'>
				<h1>Event Booking Inquiry</h1>
				<p>Get in touch with us. Just use the form below and we'll get back to you as soon as we can.</p>
				<p><a href="banquet menu.website copy_no prices.pdf">Download more information &raquo;</a></p>
    <%= @page[:body] %>

    <% form_for @event_inquiry do |f| %>
      <%= f.error_messages %>

     	<div class="field">
				<%= f.required_label :date, "Desired Date" %><br>
        <%= f.text_field :date %>
			</div>
			<div class="field">
				<%= f.required_label :time, "Desired Time" %><br>
        <%= f.text_field :time %>
			</div>
			<div class="field">
				<%= f.required_label :num_people, "Number of People" %><br>
        <%= f.collection_select :num_people, EventInquiry::NUM_PEOPLE, :to_s, :titleize, :include_blank => true %>
			</div>
			<div class="field">
				<%= f.required_label :occasion, "Occasion" %><br>
        <%= f.text_field :occasion %>
			</div>
			<div class="field">
				<%= f.required_label :name, "Your Name" %><br>
        <%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.required_label :phone, "Your Phone Number" %><br>
        <%= f.text_field :phone %>
			</div>
			<div class="field">
				<%= f.required_label :email, "Your Email" %><br>
        <%= f.text_field :email %>
			</div>
			<div class="field">
				<%= f.required_label :notes, "Notes" %><br>
        <%= f.text_area :notes %>
			</div>
			<div class="field">
				Check all that apply<br>
				<input id="event_inquiry_extras" name="extras[]" type="checkbox" value="bar/drink packages, " />Bar / Drink Packages <br>
				<input id="event_inquiry_extras" name="extras[]" type="checkbox" value="food buffet, " />Food Buffet<br>
				<input id="event_inquiry_extras" name="extras[]" type="checkbox" value="seated dining options, " />Seated Dining Options<br>
				<input id="event_inquiry_extras" name="extras[]" type="checkbox" value="live entertainment, " />Live Entertainment<br>
				<input id="event_inquiry_extras" name="extras[]" type="checkbox" value="audio visual requirements" />Audio Visual Requirements<br>
			</div>	
      <div class='actions'>
        <%= f.submit "Send Inquiry" %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render :partial => "/shared/content_page" %>
