<% content_for :body_content_title do %>
  <%= @event_inquiry.date %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Date</h3>
    <%= @event_inquiry.date %>
  </div>
  
  <div>
    <h3>Time</h3>
    <%= @event_inquiry.time %>
  </div>
  
  <div>
    <h3>Num People</h3>
    <%= @event_inquiry.num_people %>
  </div>
  
  <div>
    <h3>Occasion</h3>
    <%= @event_inquiry.occasion %>
  </div>
  
  <div>
    <h3>Phone</h3>
    <%= @event_inquiry.phone %>
  </div>
  
  <div>
    <h3>Email</h3>
    <%= @event_inquiry.email %>
  </div>
  
  <div>
    <h3>Notes</h3>
    <%= @event_inquiry.notes %>
  </div>
  
  <div>
    <h3>Extra Requirements</h3>
    <%= @event_inquiry.extra_requirements %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="event_inquiries">
    <% @event_inquiries.each do |event_inquiry| %>
      <li>
        <%= link_to event_inquiry.date, event_inquiry_url(event_inquiry) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
