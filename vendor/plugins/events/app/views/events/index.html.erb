<% content_for :body_content_left do %>
<% unless @featured_event.blank? %>
<div class="featured_event">
	<h2>Featured Event</h2>
	<h3><%= @featured_event.name %></h3>
	<div><%= @featured_event.description %></div>
	<%= @featured_event.location %><br />
	<%= link_to "For Tickets Click Here", @featured_event.purchase_link unless @featured_event.purchase_link.empty? %>
</div>

<%= render :partial => "events", :locals => { :featured_event => @featured_event } %>
<% else %>
<h2>Events</h2>
<h3>Check back often to see what's going on here at the brewery</h3>
<% end %>
<% end %>

<%= render :partial => "/shared/content_page" %>

