<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(food) -%>">
  <span class='title'>
    <%=h food.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), food_url(food),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_food_path(food),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_food_path(food),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
