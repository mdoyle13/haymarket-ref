<div class="column" id="left_col">
	<% unless @brunch.foods.appetizers.published.blank? %>
	<div class="food_category">
		<h2>Appetizers</h2>
		<%= render :partial => 'food', :collection => @brunch.foods.appetizers.published unless @brunch.foods.appetizers.published.nil? %>
	</div>
	<% end %>
	
