<div class="food_item">
	<div class="food_name_description">
		<h4><%= food.name %></h4>
			<%= image_tag "/theme/images/icon_housemade.gif", :class => "legend_icon" if food.housemade -%>
			<%= image_tag "/theme/images/icon_vegan.gif", :class => "legend_icon" if food.vegan -%>
			<%= image_tag "/theme/images/icon_spicy.gif", :class => "legend_icon" if food.spicy -%>
		<span class="description"><%= food.description %></span>
	</div>
	<div class="price">
		<%= "$" << food.price unless food.price.blank? %>
	</div>
	<div class="clear"></div>
</div>