<% menu_items.each do |item| %>
	<% if item["type"] == "section" %>
		<h2><%= item["title"] %></h2>
	<% end %>
	
	<% if item["type"] == "item" %>
	<div class="food_item">
		<div class="food_name_description">
			<h4 class="menu_title"><%= item["title"] %></h4>
			<div class="price">
				<%= "$" << item["prices"][0]["price"] unless item["prices"][0].nil? %>
			</div>
			
			<span class="description"><%= item["desc"] %></span>
		</div>
		<div class="clear"></div>
	</div>
	<% end %>
<% end %>