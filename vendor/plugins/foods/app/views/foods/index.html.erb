<% theme ||= false -%>
<% content_for :head do %>
  <%= stylesheet_link_tag "/theme/stylesheets/menu" %>
  <%= stylesheet_link_tag "/theme/stylesheets/print_menu", :media => "print" %>
<% end %>

<script type="text/javascript" src="http://menus.singleplatform.co/jsload?load=menus.2&apiKey=ke09z8icq4xu8uiiccighy1bw"></script>
<script>
    var menuApi = new MenusApi("ke09z8icq4xu8uiiccighy1bw");
    menuApi.loadMenusForLocation("haymarket-pub--brewery", "menusContainer");
    menuApi.setSectionTitleBackgroundColor("#333");
    menuApi.setPrimaryBackgroundColor("#333");
    menuApi.setMenuDescBackgroundColor("transparent");
    menuApi.setSecondaryBackgroundColor("transparent");
    menuApi.setPrimaryFontColor("#fff");
    menuApi.setPrimaryFontFamily('Copperplate, "Copperplate Gothic Bold", Helvetica, Arial, sans-serif');
    menuApi.setSectionTitleFontColor("#F7941E");
    menuApi.setItemDescFontFamily("Georgia, Times, 'Times New Roman', serif");
    menuApi.setItemDescFontColor("#F9F4A8");
    menuApi.setBaseFontSize("14px");
</script>

<h1>Our Food Menu</h1>
<div id="menusContainer">
    
</div>
