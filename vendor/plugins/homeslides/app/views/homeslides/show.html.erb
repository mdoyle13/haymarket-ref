<% content_for :body_content_title do %>
  <%= @homeslide.caption %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Caption</h3>
    <%= @homeslide.caption %>
  </div>
  
  <div>
    <h3>Photo</h3>
    <%= image_fu @homeslide.photo, nil %>
  </div>
  
  <div>
    <h3>Video Embed</h3>
    <%= @homeslide.video_embed %>
  </div>
  
  <div>
    <h3>Order</h3>
    <%= @homeslide.order %>
  </div>
  
  <div>
    <h3>Is Video</h3>
    <%= @homeslide.is_video %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="homeslides">
    <% @homeslides.each do |homeslide| %>
      <li>
        <%= link_to homeslide.caption, homeslide_url(homeslide) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
