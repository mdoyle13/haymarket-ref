<% form_for [:admin, @liquor] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger' -%>
  </div>

  <div class='field'>
    <%= f.label :liquor_category_id -%>
    <%= f.collection_select :liquor_category_id, LiquorCategory.all, :id, :name, :prompt => true -%>
  </div>  

  <div class='field'>
    <%= f.label :published -%>
    <%= f.check_box :published -%>
  </div>
  
  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.liquors.liquor.delete')
              } %>
<% end -%>
