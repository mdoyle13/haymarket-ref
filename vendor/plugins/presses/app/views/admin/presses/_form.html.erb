<% form_for [:admin, @press] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author -%>
  </div>
  
  <div class='field'>
    <%= f.label :publication -%>
    <%= f.text_field :publication -%>
  </div>
  
  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_area :content, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :pdf -%>

    <%= render :partial => "/shared/admin/resource_picker", :locals => {
      :f => f,
      :field => :pdf_id,
      :resource => @press.pdf,
    } %>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.presses.press.delete')
              } %>
<% end -%>
