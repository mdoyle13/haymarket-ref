<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(press) -%>">
  <span class='title'>
    <%=h press.headline %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), press_url(press),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_press_path(press),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_press_path(press),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
