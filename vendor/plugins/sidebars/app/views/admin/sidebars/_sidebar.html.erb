<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(sidebar) -%>">
  <span class='title'>
    <%=h sidebar.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), sidebar_url(sidebar),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_sidebar_path(sidebar),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_sidebar_path(sidebar),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
