<% content_for :body_content_title do %>
  <%= @sidebar.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @sidebar.title %>
  </div>
  
  <div>
    <h3>Image</h3>
    <%= image_fu @sidebar.image, nil %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="sidebars">
    <% @sidebars.each do |sidebar| %>
      <li>
        <%= link_to sidebar.title, sidebar_url(sidebar) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
