<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search", :locals => {:url => admin_testimonials_url} %>
    </li>
    <li>
      <%= link_to "Create New Testimonial", new_admin_testimonial_url, :class => "add_icon" %>
    </li>
  <% if !searching? and Testimonial.count > 1 %>
    <li>
      <%= link_to t('refinery.reorder', :what => "Testimonials"), admin_testimonials_url, :id => "reorder_action", :class => "reorder_icon" %>
      <%= link_to t('refinery.reorder_done', :what => "Testimonials"), admin_testimonials_url, :id => "reorder_action_done", :style => "display: none;", :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2><%= t('admin.search_results_for', :query => params[:search]) %></h2>
    <% if @testimonials.any? %>
      <%= render :partial => "testimonial", :collection => @testimonials %>
    <% else %>
      <p><%= t('admin.search_no_results') %></p>
    <% end %>
  <% else %>
    <% if @testimonials.any? %>
      <%= will_paginate @testimonials, :previous_label => '&laquo;', :next_label => '&raquo;' %>
       <ul id='sortable_list'>
        <%= render :partial => "sortable_list" %>
       </ul>
      <%= will_paginate @testimonials, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
<%= render :partial => "/shared/admin/make_sortable", :locals => {:tree => false } if !searching? and Testimonial.count > 1 %>
