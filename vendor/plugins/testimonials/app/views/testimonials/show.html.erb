<% content_for :body_content_title do %>
  <%= @testimonial.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Name</h3>
    <%= @testimonial.name %>
  </div>
  
  <div>
    <h3>City</h3>
    <%= @testimonial.city %>
  </div>
  
  <div>
    <h3>Testimonial</h3>
    <%= @testimonial.testimonial %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="testimonials">
    <% @testimonials.each do |testimonial| %>
      <li>
        <%= link_to testimonial.name, testimonial_url(testimonial) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
