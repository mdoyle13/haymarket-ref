<% categories = WineCategory.all %>

<h1>Published</h1>
<% categories.each do |category| %>
<h2><%= category.name %></h2>
<%= render :partial => 'wine', :collection => category.wines.find_all_by_published(true, :order => 'position').to_a %>
<br />
<br />
<% end %>

