<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(wine) -%>">
  <span class='title'>
    <%=h wine.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), wine_url(wine),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_wine_path(wine),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_wine_path(wine),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
